{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "./lib",
    "types": ["node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}