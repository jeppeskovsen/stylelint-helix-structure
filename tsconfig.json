{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "./lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}