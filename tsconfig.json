{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}